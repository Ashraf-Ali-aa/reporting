{
    "index_patterns" : ["logs-*"],
    "mappings" : {
        "doc" : {
            "properties" : {
                "@timestamp" : {
                    "type" : "date"
                },
                "@version" : {
                    "type" : "text"
                },
                "correlation-id" : {
                    "type" : "keyword"
                },
                "level" : {
                    "type" : "text"
                },
                "logger" : {
                    "type" : "text"
                },
                "message" : {
                    "type" : "text",
                    "ignore_above": 8191
                },
                "threadName" : {
                    "type" : "text"
                },
                "timestamp" : {
                    "type" : "long"
                }
            }
        }
    }
}
